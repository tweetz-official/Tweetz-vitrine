<footer>
  <div class="c-pagesection">

    <div class="l-container">
      <div class="c-sitefooter">

        <div class="c-sitefooter__nav">
          <p class="c-siteheader__logo">
            <a aria-label="Homepage" href="/">{% include "partials/logo.njk" %}</a>
          </p>
          {% include "partials/mainnav.njk" %}
        </div>

        <hr>

        <div class="c-sitefooter__footer">
          <p class="c-copyright">&copy; <time datetime="{{ site.buildTime | dateISO }}">{{ site.buildTime | dateYear }}</time> - Tweetz</p>
          <a class="c-sitefooter__link" href="https://support.tweetz.com/" target="_blank" rel="noopener noreferrer" data-i18n="support"></a>
          <nav class="c-sitefooter__social" aria-label="social media">
            <ul class="c-socialmedia">
              {% for item in socialmedia %}
                <li class="c-socialmedia__item">
                  <a class="c-socialmedia__link" href="{{ item.url }}" aria-label="{{ item.name }}" title="{{ item.name }}">{% include "svg/socials/" ~ item.icon %}</a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</footer>